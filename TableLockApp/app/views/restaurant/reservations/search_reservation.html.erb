<%= render :partial=>"restaurant/side_bar" %>
<div class="row">


  <div class="input-field col s3">
    <select id="searchby" name="searchby">
      <option value="" disabled selected>Search by</option>
      <option value="1">Diner</option>
      <option value="2">Date</option>

    </select>

  </div>

  <div class="input-field col s3">
    <i class="material-icons prefix">today</i>
    <input id="date" type="date" class="datepicker">
    <label for="date" class="active">Date </label>
  </div>



  <div class=" col s3 ">

    <a class="waves-effect waves-light btn">Search </a>

  </div>
</div>
<div class=" col s12" >
  <table class="responsive-table highlight centered">
    <thead>
    <tr>
      <th data-field="name">Name</th>
      <th data-field="date" >Date</th>
      <th data-field="time_slot">Time Slot</th>
      <th data-field="action" >Action</th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td>Tamasha</td>
      <td>04/04/2016</td>
      <td>8.00pm</td>
      <td><a class="waves-effect waves-light btn red">Cancel</a>
        <a class="waves-effect waves-light btn green">On Time</a>
        <a class="waves-effect waves-light btn yellow">Delay</a>
        <a class="waves-effect waves-light btn black">No show</a></td>
    </tr>

    </tbody>
  </table>
</div>