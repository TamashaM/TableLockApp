<head>
  <style>
    h4 {
      color: #4db6ac;

    }
    thead{
      border-bottom: 0
    }
    tap{
      padding-left:5em;
      margin-left:5em
    }
    h5{
      font-size:14pt;
      font-weight :bold
    }

     body{
       background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'rest4.jpg' %>);
       -webkit-background-size: cover;
       -moz-background-size: cover;
       -o-background-size: cover;
       background-size: cover;
     }

  </style>
</head>
<div>
  <% if session[:diner_id].nil? %>

  <%= render :partial=> "admin/side_bar" %>
      <% else %>
      <%= render :partial=> "diner/side_bar" %>
      <% end %>
  <div class="container  ">
    <div class="  card-panel offset-s3 " >

      <form class="col s12  " >
        <h4><%=@restaurant.restaurant_name%> &nbsp; </h4>
        <hr>
        <div class="row">


        </div>

        <div class="col s12 m7">

          <div class="card horizontal">
            <div class="card-image">
              <%= image_tag @restaurant.avatar.url(:medium) %>
            </div>
            <div class="card-stacked">
              <div class="card-content">

                <h5> About</h5>
                <span><%=@restaurant.about%></span>
              </div>

            </div>
          </div>
        </div>

        <hr>


        <h5> Dining Information</h5>
        <div class="row">
          <div class="col s6">
            <span>Dining Style:</span>&nbsp;<span><%=@dining_info.dining_style%></span>
          </div>
          <div class="col s6">
            <span>Dress Code:</span>&nbsp;<span><%=@dining_info.dress_code%></span>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <span>Cuisines:</span>&nbsp;<span><%=@dining_info.cuisines%></span>
          </div>
          <div class="col s6">
            <span>Website:</span>&nbsp;<span><%=@dining_info.website%></span>
          </div>
        </div>
        <br>
        <br>
        <hr>
        <h5> Operating Hours</h5>
        <div class="row">

        <div class="row col s12 ">

          <span>Monday:</span>
          <span>
            <% @monday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Tuesday:</span>
          <span>
            <% @tuesday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Wednesday:</span>
          <span>
            <% @wednesday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Thursday:</span>
          <span>
            <% @thursday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Friday:</span>
          <span>
            <% @friday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Saturday:</span>
          <span>
            <% @saturday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>
        <div class="row col s12">
          <span>Sunday:</span>
          <span>
            <% @sunday.each do |tp| %>

                <%=tp.start_time.strftime("%H:%M") %>
                <span>To</span>
                <%=tp.end_time.strftime("%H:%M") %>
                <span>    &nbsp;               </span>

            <% end%>
          </span>
        </div>


        </div>
        <br>
        <hr>
        <h5> Offers</h5>
        <table class="  centered">
          <thead>
          <tr>
            <th data-field="name">Name</th>
            <th data-field="description" >Description</th>
            <th data-field="from">From</th>
            <th data-field="to">To</th>

          </tr>
          </thead>

          <tbody>
          <% @offers.each do |off| %>
              <tr>
                <td><%= off.name %></td>
                <td><%= off.description %></td>
                <td><%= off.start_date %><p>  </p> <%= off.start_time.strftime("%H:%M")%> </td>
                <td><%= off.end_date %><p>  </p> <%= off.end_time.strftime("%H:%M")%> </td>

              </tr>
          <%end%>

          </tbody>
        </table>
        <br>
        <hr>
        <h5> Meals</h5>
        <table class="  centered">
          <thead>
          <tr>
            <th>Title</th>
            <th>Price($)</th>
            <th>Start Time</th>
            <th>End Time</th>
          </tr>
          </thead>
          <tbody>
          <% if !@meal_types.empty? %>
              <% @meal_types.each do |m| %>
                  <tr>
                    <td><%= m.title %></td>
                    <td><%= m.price %></td>
                    <td><%= m.start_time.strftime("%H:%M") %></td>
                    <td><%= m.end_time.strftime("%H:%M") %>

                    </td>
                  </tr>
                  </tbody>
              <% end %>
          <% end %>
          </table>
        <br>
        <hr>
        <h5> Contact</h5>
        <div class="row">
        <div class=" col s6">
          <span>Address:</span><br>
          <span><%=@restaurant.add_line1%></span><br>
          <span><%=@restaurant.add_line2%></span><br>
          <span><%=@restaurant.city%></span><br>
          <span><%=@restaurant.province%></span>
        </div>
        <div class="col s6">
          <span>Phone Number:</span> &nbsp;<span><%=@restaurant.telephone%></span><br>
          <% if !@restaurant.email.nil? %>
            <span>Email:</span> &nbsp;<span><%=@restaurant.email%></span>
          <% end %>
        </div>
        </div>
      </form>
        </div>




    </div>
  </div>


</body>