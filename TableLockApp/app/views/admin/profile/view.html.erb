<head>
  <style>
    h4 {
      color: #4db6ac;

    }
    body{
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'rest4.jpg' %>);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
</head>
<%= render :partial=>"admin/side_bar" %>
<div class="row">
  <form class="col s12 white " method="POST" action="/admin/profile">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <h4 >     My Profile</h4>
    <hr>
    <div class="row">
    </div>
    <div class="row">
      <div class="input-field col s6">
        <!--<input type="hidden" name="admin[id]" value="<%= @admin.id %>">-->
        <i class="material-icons prefix">person</i>
        <input  id="first_name" name="admin[first_name]" type="text" class="validate" value="<%=@admin.first_name %>" required>
        <label for="first_name" class="active">First Name</label>
      </div>
      <div class="input-field col s6">

        <input id="last_name" name="admin[last_name]"  class="validate" value="<%=@admin.last_name %>" required>
        <label for="last_name" class="active">Last Name</label>
      </div>
    </div>
    <%= params[:admin]%>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input disabled id="email" name="admin[email]" type="email" class="validate" value="<%=@user.email %>" >
        <label for="email" class="active" data-error="wrong" data-success="right">Email</label>

      </div>
    </div>

    <div class="row">
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">phone</i>
        <input id="telephone" name="admin[telephone]" type="tel" class="validate" value="<%=@admin.telephone %>" required>
        <label for="telephone" class="active">Mobile</label>
      </div>

    </div>
    <div class="row">
    </div>


    <div class="row center">
      <button class="btn waves-effect waves-light " type="submit" name="action">Save
        <i class="material-icons right">save</i>
      </button>
    </div>
    <div class="row">
    </div>
  </form>
</div>