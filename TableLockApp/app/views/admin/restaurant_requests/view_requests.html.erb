<head>
  <style>
    body{
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'rest4.jpg' %>);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
</head>
<%= render :partial=>"admin/side_bar" %>
<form method="get" action="/admin/view_requests2">
<div class=" col s12" >
  <table class="responsive-table highlight white centered">
    <thead>
    <tr>
      <th data-field="restaurant">Restaurant</th>
      <th data-field="status" >Status</th>
      <th data-field="action">Action</th>
    </tr>
    </thead>

    <tbody>
    <% @restaurant_request.each do |req| %>
    <tr>
      <td><%=req.restaurant_name %></td>
      <% if req.status==2 %>
          <td>Rejected</td>
      <% elsif req.status==1 %>
          <td>Accepted</td>
      <%else %>
          <td>Pending</td>
      <% end%>
      <td>
        <% if req.status==2 %>
        <a class="waves-effect waves-light btn green" href="/admin/accept?id=<%=req.id%>" >Accept</a>
        <a disabled class="waves-effect waves-light btn red" href="/admin/reject?id=<%=req.id%>">Reject</a>
        <% elsif req.status==1 %>

            <a disabled class="waves-effect waves-light btn green" href="/admin/accept?id=<%=req.id%>" >Accept</a>
            <a class="waves-effect waves-light btn red" href="/admin/reject?id=<%=req.id%>">Reject</a>
        <% else %>
            <a class="waves-effect waves-light btn green" href="/admin/accept?id=<%=req.id%>" >Accept</a>
            <a class="waves-effect waves-light btn red" href="/admin/reject?id=<%=req.id%>">Reject</a>
            <% end %>
            </td>
    </tr>
        <%end%>

    </tbody>
  </table>
</div>
</form>
