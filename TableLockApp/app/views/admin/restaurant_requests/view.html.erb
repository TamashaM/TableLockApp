
<head>
  <style>
    body{
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'rest4.jpg' %>);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
  <script>
      $( document ).on('turbolinks:load',function() {
          $("div.id_100 select").val(<%=@restaurant_request.position %>);
      });
  </script>
</head>
<%= render :partial=>"admin/side_bar" %>
<div id="signup-restaurant-page" class="row">

  <div class="col s6 z-depth-4 card-panel offset-s2" >

      <div class="row center">
        <h4>Request Details</h4>
      </div>
      <hr>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">person</i>
          <input  id="first_name" name="user[first_name]" type="text" class="validate" value="<%=  @restaurant_request.first_name %>" readonly>
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">

          <input id="last_name" name="user[last_name]" type="text" class="validate" value="<%=  @restaurant_request.last_name %>" readonly>
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row margin">
        <div class="id_100 input-field col s12 " >
          <i class="mdi-action-lock-outline prefix material-icons prefix">account_box</i>

            <select  name="user[position]" disabled  >

              <option value="1">Owner</option>
              <option value="2">Manager</option>
              <option value="3">General Staff</option>
              <option value="4">Other</option>
            </select>


        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">restaurant </i>
          <input  id="restaurant_name" name="user[restaurant_name]" type="text" class="validate" value="<%=  @restaurant_request.restaurant_name %>" readonly>
          <label for="restaurant_name">Restaurant Name</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <input id="email" name="user[email]" type="email" class="validate" value="<%=  @restaurant_request.restaurant.user.email %>" readonly>
          <label for="email" >Email</label>

        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">phone</i>
          <input id="telephone" data-error="invalid" data-success="valid" name="user[telephone]" type="tel" class="validate" placeholder="+94xxxxxxxxx" value="<%=  @restaurant_request.telephone %>" readonly>
          <label for="icon_telephone">Telephone</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix ">location_on</i>

          <label for="address" >Address</label>
        </div>
      </div>
      <div class="row">
      </div>
      <div class="row">
        <div class="input-field col s6 ">
          <i class="material-icons prefix"></i>
          <input id="add_line1"  name=user[add_line1] type="text" class="validate" value="<%=  @restaurant_request.add_line1 %>" readonly>
          <label for="add_line1" >Line 1 address</label>
        </div>
        <div class="input-field col s6">
          <input id="add_line2" name="user[add_line2]" type="text" class="validate" value="<%=  @restaurant_request.add_line2 %>" readonly >
          <label for="add_line2" >Line 2 address</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix"></i>
          <input id="city" type="text" name="user[city]" class="validate" value="<%=  @restaurant_request.city %>" readonly >
          <label for="city" >City</label>
        </div>
        <div class="input-field col s6">
          <input id="province" type="text" name="user[province]"  class="validate" value="<%=  @restaurant_request.province %>" readonly>
          <label for="province" >State/Province/Region</label>
        </div>
      </div>

      <input id="user_type" name="user[user_type]" type="hidden" value =1 class="validate">

  </div>
</div>
