<div class="container ">
  <div class="col s6  card-panel offset-s3 " >


      <div class="card-stacked">
        <div class="card-content">
          <h6>Time Slots Available</h6>

        </div>

        <div class="card-action">
          <% @restts.each do |ts| %>
              <%  if ts[1]==0 %>
                  <a class="waves-effect waves-light btn " href="/diner/make_reservation?id=<%=@restaurant.id%>&ts=<%=ts[0]%>&date=<%=@date%>&packs=<%=@packs%>"><%=ts[0]%></a>
              <%  elsif ts[1]==1  %>
                  <a class=" black waves-effect waves-light btn " href="/diner/add_to_waiting_list?id=<%=@restaurant.id%>&ts=<%=ts[0]%>&date=<%=@date%>&packs=<%=@packs%>"><%=ts[0]%></a>
              <% end %>
          <% end %>

        </div>

      </div>
 
  </div>
</div>