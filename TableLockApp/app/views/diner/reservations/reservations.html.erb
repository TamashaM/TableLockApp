<head>
  <style>

    select{  font-size:20px;
      color: black}
    body{
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'cover.jpg' %>);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }

  </style>
</head>

<%= render :partial=>"diner/side_bar" %>

<div class="row">
  <div class=" col s3" >
    <select>
      <option value="" disabled selected>Search by</option>
      <option value="1">Date</option>
      <option value="2">Restaurant</option>

    </select>

  </div>
  <div class=" col s3" >
    <input  id="search" type="text" class="validate">
  </div>
  <div class=" col s3 ">

    <a class="waves-effect waves-light btn">Search </a>

  </div>
</div>

<div class="col s12 m7">
  <div class="card horizontal">
    <div class="card-image">
      <img src="images/logo.jpg" width="60" height="240">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <p>Restaurant:</p>
        <p>Date:</p>
        <p>Time Slot:</p>
        <p>Number of people:</p>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-light btn-medium">Modify</a>
        <a class="waves-effect waves-light btn-medium">Cancel</a>

      </div>

    </div>
  </div>
</div>

