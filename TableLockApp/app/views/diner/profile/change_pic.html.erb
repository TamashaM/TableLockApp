<head>
  <style>
    h4 {
      color: #4db6ac;

    }
    body{
      background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'rest4.jpg' %>);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
  <script>

      $( document ).ready(function() {
          $('.datepicker').pickadate({
              format: 'mm/dd/yyyy',
              selectMonths: true, // Creates a dropdown to control month
              selectYears: 100 // Creates a dropdown of 15 years to control year
          });
      });
      $( document ).ready(function() {
          $('.timepicker').pickatime({
              default: 'now',
              twelvehour: false, // change to 12 hour AM/PM clock from 24 hour
              donetext: 'OK',
              autoclose: false,
              vibrate: true // vibrate the device when dragging clock hand
          });
      });


  </script>

</head>
<%= render :partial=> "diner/search_bar" %>
<%= render :partial=> "diner/side_bar" %>

<div class="row">
  <form class="col s12 white " method="POST" action="/diner/profile/change_pic"  enctype="multipart/form-data">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <h4 >  Select an image to change your profile picture</h4>
    <div class="row">
      <i class="material-icons prefix"></i>
      <input  id="avatar" name="avatar" type="file" >

    </div>

    <div class="row center">
      <button class="btn waves-effect waves-light " type="submit" name="action">Save
        <i class="material-icons right">save</i>
      </button>
    </div>
  </form>
</div>