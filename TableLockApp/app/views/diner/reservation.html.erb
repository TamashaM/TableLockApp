
<%= render "search_bar" %>
<div class="col s6 z-depth-4 card-panel offset-s3" >
  <form class="col s12 ">
    <div class="row">
      <i class="material-icons prefix">person</i>
      <div class=" col s6">


        <label for="first_name">First Name</label>
      </div>
      <div class=" col s6">


        <label for="last_name">Last Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">restaurant_menu</i>
        <select id="meal_type">
          <option value="" disabled selected>Choose your option</option>
          <option value="1">A la Carte</option>
          <option value="2">Buffet</option>
          <option value="3">High Tea</option>
        </select>
        <label for="meal_type" >Meal Type</label>

      </div>
      <div class=" col s6">

        <label for="packs">No of Packs:</label>
      </div>
    </div>

    <div class="row center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Pay and Reserve

      </button>
      <button class="btn waves-effect waves-light" type="submit" name="action">Pay

      </button>
    </div>
  </form>
</div>